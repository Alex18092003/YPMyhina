<Page x:Class="YPMyhina.PageProductList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YPMyhina"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Список товаров">
    <Page.Resources>
        <BitmapImage x:Key="defaultImage" UriSource="../Resorces/picture.png"></BitmapImage>
    </Page.Resources>
   

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Margin="10,10,10,10"  Grid.Row="0"  Orientation="Horizontal">
            <StackPanel>
                <Image  Width="50" Height="50" Source="../Resorces/logo.png" HorizontalAlignment="Left"></Image>
                <Button Name="ButtonExit" Click="ButtonExit_Click">
                    <Button.ToolTip>
                        <ToolTip>
                            Нажмите для выхода к окну авторизации
                        </ToolTip>
                    </Button.ToolTip>
                    Выход
                </Button>
            </StackPanel>

           
            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                <ComboBox Margin="0,0,0,5" SelectionChanged="ComboSort_SelectionChanged" Height="22" Width="200" Name="ComboSort" >
                    <ComboBox.ToolTip>
                        <ToolTip>
                            Раскройте список сортировки
                        </ToolTip>
                    </ComboBox.ToolTip>
                    <ComboBoxItem>Без сортировки</ComboBoxItem>
                    <ComboBoxItem>По возрастанию стоимости</ComboBoxItem>
                    <ComboBoxItem>По убывания стоимости</ComboBoxItem>
                </ComboBox>
                <ComboBox Margin="0,5,0,0"  Name="ComboFilter" SelectionChanged="ComboFilter_SelectionChanged" Height="22" Width="200">
                    <ComboBox.ToolTip>
                        <ToolTip>
                            Раскройте список фильтрации
                        </ToolTip>
                    </ComboBox.ToolTip>
                    <ComboBoxItem>Все диапазоны</ComboBoxItem>
                    <ComboBoxItem>От 0 - до 9,99%</ComboBoxItem>
                    <ComboBoxItem>От 10 - до 14,99%</ComboBoxItem>
                    <ComboBoxItem>От 15%</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            
            <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                <TextBlock >Поиск по наименованию товара:</TextBlock>
                <TextBox Margin="0,5,0,0" TextChanged="TextBoxSeach_TextChanged" Name="TextBoxSeach" Width="180"></TextBox>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right">
                <TextBlock HorizontalAlignment="Right"  Name="TextFIO"></TextBlock>
            </StackPanel>
           
        </StackPanel>

        <StackPanel  Margin="10,0,10,0" Grid.Row="1" Orientation="Horizontal">
            <TextBlock FontSize="29">Товары</TextBlock>
            <TextBlock Name="TextCountBD"></TextBlock>
            <TextBlock Name="TextCount"></TextBlock>
        </StackPanel>
       
        <StackPanel Grid.Row="2">
            <ListView Height="400" Name="ListProduct" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel >
                            
                        </StackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="2">
                            <Grid Background="{Binding ColorDiscount}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="100" Height="100" Name="ImageProduct" Source="{Binding ProductImage, TargetNullValue={StaticResource defaultImage}}"></Image>
                                    <StackPanel>
                                        <TextBlock Text="{Binding ProductName}" Name="TextName"></TextBlock>
                                        <TextBlock Text="{Binding ProductDescription}" Name="TextDescription"></TextBlock>
                                        <TextBlock Text="{Binding Manufacturer.ManufacturerName}" Name="TextManufacturer"></TextBlock>
                                        <StackPanel Orientation="Horizontal">
                                            
                                            <TextBlock Margin="0,0,10,0" Text="{Binding StringProductCost}" TextDecorations="Strikethrough"  Name="TextPrice"></TextBlock>
                                            <TextBlock  Margin="0,0,10,0" Text="{Binding StringProductCost2}"   Name="TextCost"></TextBlock>
                                            <TextBlock Margin="0,0,10,0" Text="{Binding StringProductCost3}"   Name="TextCost2"></TextBlock>
                                        </StackPanel>
                                       
                                    </StackPanel>
                                    <TextBlock Text="{Binding ProductDiscountAmount}" Name="Text"></TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
